<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bukutelepondigital.ViewContactController">
    <!-- Menampilkan detail kontak -->
    <Label fx:id="nameLabel" layoutX="20.0" layoutY="20.0" text="Name"/>
    <Label fx:id="phoneLabel" layoutX="20.0" layoutY="60.0" text="Phone"/>

    <!-- Tombol Edit -->
    <Button fx:id="editButton" layoutX="20.0" layoutY="100.0" text="Edit" onAction="#editContact"/>

    <!-- Tombol Back -->
    <Button layoutX="100.0" layoutY="100.0" text="Back" onAction="#goBack"/>
</AnchorPane>
